@using ShoppeWebApp.ViewModels.Customer
@model ResetPasswordViewModel

@{
    ViewData["Title"] = "Thay đổi mật khẩu";
}

<style>
    .reset-password-container {
        max-width: 400px;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
        background-color: #fff;
        text-align: center;
        font-family: 'Calibri', sans-serif;
    }

        .reset-password-container h2 {
            font-size: 24px;
            margin-bottom: 20px;
        }

        .reset-password-container p {
            font-size: 14px;
            margin-bottom: 5px;
        }

        .reset-password-container .form-group {
            margin-bottom: 15px;
            text-align: left;
        }

        .reset-password-container .form-control {
            width: 100%;
            padding: 10px;
            margin-top: 5px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
        }

        .reset-password-container .btn-primary {
            width: 100%;
            padding: 10px;
            background-color: #000;
            color: #fff;
            border: none;
            border-radius: 5px;
            box-sizing: border-box;
            cursor: pointer;
        }

            .reset-password-container .btn-primary:hover {
                background-color: #333;
            }

        .reset-password-container .alert {
            margin-top: 20px;
        }
</style>

<div class="reset-password-container">
    <h2>Thay đổi mật khẩu</h2>
    <p>Vui lòng nhập mật khẩu mới của bạn.</p>

    <form asp-action="ResetPassword" method="post">
        <div class="form-group">
            <label asp-for="NewPassword" class="control-label">Mật khẩu mới</label>
            <input asp-for="NewPassword" class="form-control" placeholder="Mật khẩu mới" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword" class="control-label">Xác nhận mật khẩu</label>
            <input asp-for="ConfirmPassword" class="form-control" placeholder="Xác nhận mật khẩu" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <input type="hidden" asp-for="Username" />
        <div class="form-group">
            <input type="submit" value="Đặt lại mật khẩu" class="btn btn-primary" />
        </div>
    </form>

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-success">
            @ViewBag.Message
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
