@using ShoppeWebApp.ViewModels.Seller
@model LoginViewModel

@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="seller-login-container">
    <div class="left-section">
        <h2>Bán hàng chuyên nghiệp</h2>
        <p>Quản lý shop của bạn một cách hiệu quả hơn <br /> trên Shoppe với Shoppe - Kênh Người Bán</p>
        <img src="~/Images/SellerLogin.png" />
    </div>
    <div class="right-section">
        <h1>Đăng nhập vào Kênh Người Bán</h1>
        <p>Sử dụng Nickname để đăng nhập vào ứng dụng</p>

        <div class="new-account">
            <span>🔔 New here? <a asp-area="Seller" asp-controller="Account" asp-action="Register">Tạo tài khoản</a></span>
        </div>

        <div class="validation-summary">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        </div>

        <form asp-area="Seller" asp-controller="Account" asp-action="Login" method="post" class="login-form">
            <div class="form-group">
                <label asp-for="Username">Tên đăng nhập</label>
                <input asp-for="Username" class="form-control" placeholder="Tên đăng nhập" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password">Mật khẩu</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Mật khẩu" />
                <span asp-validation-for="Password" class="text-danger"></span>
                <a asp-area="Seller" asp-controller="Account" asp-action="ForgotPassword" class="forgot-password">Quên mật khẩu?</a>
            </div>

            <button type="submit" class="btn btn-primary">ĐĂNG NHẬP</button>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

